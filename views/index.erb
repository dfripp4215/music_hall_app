
<% if is_logged_in?() %>

    Welcome, <%=current_user[0]["name"]%>

    <form action="/sessions" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Logout">
    </form>

<% else %>
    <a href="/sign_up">Sign up</a>

    <a href="/login">Login</a>
<% end %>



<form action="/search">
    <input type="text" name="search" />
    <input type="submit" />
</form>

<section id='top_ten'>
    <% song_list.each do |song|%>

        <a href="/display?search=<%=song["key"]%>" name="my_name">
            <img src="<%=song['images']['coverart']%>" alt="">
        </a>

        <p id='top_ten_text'><%=song['title']%> <span> - Artist: <%=song['subtitle']%></span></p>

<%end%>
</section>

<% if is_logged_in?() %>

    <section>

        <h2>Your Playlist</h2>

        <% playlists.each do |playlist| %>

            <section>

                <h3><%= playlist["playlist_name"] %></h3>
                    <ul>
                        <%songs.each do |song|%>
                            <%if song['playlist'] == playlist["playlist_name"]%>
                                <li><%=song['song']%> <span id='artist'> - Artist: <%=song['artist']%></span></li>
                            <%end%>
                        <%end%>
                    </ul>

                <form action="/playlist/<%= playlist["playlist_name"] %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE"/> 
                    <input type="submit" value="Delete Playlist"/>
                </form>
                
                <a href="/playlist/<%= playlist["playlist_name"]%>/edit">Edit</a>
            </section>

        <%end%>
        

        <a href="/playlist/create">Create a playlist</a>
    </section>

<% end %>